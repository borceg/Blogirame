        <shape>
            <gradient android:startColor="@color/white_dirty"
                android:centerY="0.75" android:endColor="@color/white_dirty" android:angle="90" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/blue_trademark" android:endColor="@color/blue_trademark"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>